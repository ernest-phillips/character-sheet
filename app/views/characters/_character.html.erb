<div id="<%= dom_id character %>">
  <p>
    <strong>Name:</strong>
    <%= character.name %>
  </p>

  <p>
    <strong>Class:</strong>
    <%= character.class %>
  </p>

  <p>
    <strong>Player name:</strong>
    <%= character.player_name %>
  </p>

  <p>
    <strong>Race:</strong>
    <%= character.race %>
  </p>

  <p>
    <strong>Alignment:</strong>
    <%= character.alignment %>
  </p>

  <p>
    <strong>Experience points:</strong>
    <%= character.experience_points %>
  </p>

  <p>
    <strong>Level:</strong>
    <%= character.level %>
  </p>

</div>
